@model FatecRP.EmpreendeRP.Web.Models.Pessoa
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<section class="container panel panel-default bordapreta" style="padding-top: -25px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <a href="http://fatecriopreto.edu.br"><img class="center-block" src="~/img/fatecsfnd.png" style="height: 64px; width:auto; padding-top: 10px;" /></a>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-9 col-xs-12">
                <h2 class="vertical-align">Empreende Rio Preto Cadastro</h2>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <p class="vertical-align" style="padding-top:30px; color: #ff0000">Total: @ViewBag.QtdCad</p>
            </div>
        </div>
    </div>
    <div>
        <hr class="bordapreta"/>
    </div>
        @if (TempData["Sucesso"] != null)
        {
            <br />
            <div class="col-lg-12">
                <div class="alert alert-success text-center col-lg-offset-4 col-lg-4 col-lg-offset-4" role="alert">
                    <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
                    <span class="sr-only">Success:</span>
                    @TempData["Sucesso"]
                </div>
            </div>
        }
        @if (TempData["Falha"] != null)
        {
            <br />
            <div class="col-lg-12">
                <div class="alert alert-danger text-center col-lg-offset-4 col-lg-4 col-lg-offset-4" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    @TempData["Falha"]
                </div>
            </div>
        }

        <form role="form" action="~/Pessoa/Create" method="POST">
                <div class="form-group">
                    <div class="col-lg-4">
                        <label class="">CPF: </label>
                        <!-- Textbox criado pelo razor-->
                        @Html.TextBoxFor(m => m.Cpf, new { @runat = "server", @id = "cpf", @class = "form-control control-label", @type = "text", @placeholder = "Ex: 999.999.999-99", maxlength = "14" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Cpf)</div>
                        
                        <label class="control-label">RG: </label>
                        <!-- Textbox criado pelo razor-->
                        @Html.TextBoxFor(m => m.Rg, new { @id = "rg", @class = "form-control", @type = "text", @placeholder = "Ex: 99.999.999-9", maxlength = "20" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Rg)</div>

                        <label class="control-label">Nome: </label><label style="color: #ff0000" title="Obrigatório">*</label>
                        <!-- Textbox criado pelo razor-->
                        @Html.TextBoxFor(m => m.Nome, new { @id = "nome", @class = "form-control", @type = "text", @placeholder = "Nome", @required = "required", maxlength = "100" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Nome)</div>


                        <label class="control-label">Data de Nascimento: </label><label style="color: #ff0000" title="Obrigatório">*</label>
                        @Html.TextBoxFor(m => m.DataNasc, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control date", @placeholder = "Data de Nascimento", @required = "required", min = "1900-01-01", max = "2017-12-31" })
                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.DataNasc)</div>


                        <label class="control-label">Email: </label>
                        <!-- Textbox criado pelo razor-->
                        @Html.TextBoxFor(m => m.Email, new { @id = "email", @class = "form-control", @type = "text", @placeholder = "Email", maxlength = "60" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Email)</div>

                        <label class="control-label">Telefone Fixo: </label>
                        <!-- Textbox criado pelo razor-->
                        @Html.TextBoxFor(m => m.Fixo, new { @id = "fixo", @class = "form-control", @type = "text", @placeholder = "Ex: (99) 9999-9999", maxlength = "14" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Fixo)</div>


                        <label class="control-label">Celular: </label>
                        <!-- Textbox criado pelo razor-->
                        @Html.TextBoxFor(m => m.Celular, new { @id = "celular", @class = "form-control", @type = "text", @placeholder = "Ex: (99) 99999-9999", maxlength = "15" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Celular)</div>
                    </div>
                    <div class="col-lg-4">
                        <label class="control-label">CEP: </label>
                        <!-- Textbox criado pelo razor-->
                        @Html.TextBoxFor(m => m.Cep, new { @id = "cep", @class = "form-control", @type = "text", @placeholder = "Ex: 15040270", maxlength = "9" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Cep)</div>


                        <label class="control-label">Logradouro: </label><label style="color: #ff0000" title="Obrigatório">*</label>
                        <!-- Textbox criado pelo razor-->
                        @Html.TextBoxFor(m => m.Logradouro, new { @id = "logradouro", @class = "form-control", @type = "text", @placeholder = "Ex: Rua, Avenida...", @required = "required", maxlength = "50" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Logradouro)</div>


                        <label class="control-label">Número: </label><label style="color: #ff0000" title="Obrigatório">*</label>
                        <!-- Textbox criado pelo razor-->
                        @Html.TextBoxFor(m => m.Numero, new { @id = "numero", @class = "form-control", @type = "text", @placeholder = "Numero", @required = "required", maxlength = "50" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Numero)</div>


                        <label class="control-label">Bairro: </label>
                        <!-- Textbox criado pelo razor-->
                        @Html.TextBoxFor(m => m.Bairro, new { @id = "bairro", @class = "form-control", @type = "text", @placeholder = "Bairro", maxlength = "50" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Bairro)</div>


                        <label class="control-label">Cidade: </label>
                        <!-- Textbox criado pelo razor-->
                        @Html.TextBoxFor(m => m.Localidade, new { @id = "localidade", @class = "form-control", @type = "text", @placeholder = "Cidade", maxlength = "50" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Localidade)</div>


                        <label class="control-label">Estado: </label>
                        <!-- Textbox criado pelo razor-->
                        @Html.TextBoxFor(m => m.Uf, new { @id = "uf", @class = "form-control", @type = "text", @placeholder = "Estado", maxlength = "2" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Uf)</div>

                        <label class="control-label">Escolaridade: </label>
                        <!-- Textbox criado pelo razor-->
                        @Html.DropDownList("Escolaridade", new List<SelectListItem> {
                       new SelectListItem { Value = "Fundamental" , Text = "Fundamental" },
                       new SelectListItem { Value = "Médio" , Text = "Médio" },
                       new SelectListItem { Value = "Técnico" , Text = "Técnico" },
                       new SelectListItem { Value = "Graduação" , Text = "Graduação" },
                       new SelectListItem { Value = "Pós-Graduado" , Text = "Pós-Graduado" },
                       new SelectListItem { Value = "Outra" , Text = "Outra" }
                    }, new { @class = "form-control", @required = "required" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Escolaridade)</div>
                    </div>
                    <div class="col-lg-4">
                        <label class="control-label">Trabalha?: </label>
                        <!-- Textbox criado pelo razor-->
                        @Html.DropDownList("Trabalha", new List<SelectListItem> {
                       new SelectListItem { Value = "Não" , Text = "Não" },
                       new SelectListItem { Value = "Sim" , Text = "Sim" }
                    }, new { @id = "trabalha", @class = "form-control", @required = "required" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Trabalha)</div>

                        <div id="ondetrabdiv" style="display: none;">
                            <label class="control-label">Onde Trabalha?: </label>
                            <!-- Textbox criado pelo razor-->
                            @Html.DropDownList("OndTrabalha", new List<SelectListItem> {
                       new SelectListItem { Value = "Comércio" , Text = "Comércio" },
                       new SelectListItem { Value = "Serviços" , Text = "Serviços" },
                       new SelectListItem { Value = "Indústria" , Text = "Indústria" },
                       new SelectListItem { Value = "Campo" , Text = "Campo" }
                    }, new { @id = "ondetrab", @class = "form-control", @required = "required", @disabled = "disabled" })
                            <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.OndTrabalha)</div>
                        </div>


                        <label class="control-label">É Empreendedor?: </label>
                        <!-- Textbox criado pelo razor-->
                        @Html.DropDownList("EhEmpreendedor", new List<SelectListItem> {
                       new SelectListItem { Value = "Não" , Text = "Não" },
                       new SelectListItem { Value = "Sim" , Text = "Sim" }
                    }, new { @id = "ehempreendedor", @class = "form-control", @required = "required" })
                        <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.EhEmpreendedor)</div>

                        <div id="cnpjdiv" style="display: none;">
                            <label class="control-label">Se é empreendedor, qual é o CNPJ?: </label>
                            <!-- Textbox criado pelo razor-->
                            @Html.TextBoxFor(m => m.Cnpj, new { @id = "cnpj", @class = "form-control", @type = "text", @disabled = "disabled", @placeholder = "Ex: 99.999.999/9999-99", maxlength = "18" })
                            <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.Cnpj)</div>
                        </div>

                            <label class="control-label">Possui Necessidades Especiais?: </label>
                            <!-- Textbox criado pelo razor-->
                            @Html.DropDownList("NecessidadeEsp", new List<SelectListItem> {
                       new SelectListItem { Value = "Não" , Text = "Não" },
                       new SelectListItem { Value = "Sim" , Text = "Sim" }
                    }, new { @id = "necessidadeesp", @class = "form-control", @required = "required" })
                            <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.NecessidadeEsp)</div>

                        <div id="necessidadediv" style="display: none;">
                            <label class="control-label">Se sim qual?: </label>
                            <!-- Textbox criado pelo razor-->
                            @Html.TextBoxFor(m => m.QualNecessidad, new { @id = "qualnecessidade", @class = "form-control", @type = "text", @placeholder = "Ex: Toma remédios, Deficiência física...", maxlength = "50", @disabled = "disabled" })
                            <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.QualNecessidad)</div>
                        </div>

                            <label class="control-label">Como ficou sabendo do evento?: </label>
                            <!-- Textbox criado pelo razor-->
                            @Html.DropDownList("SabendoEvento", new List<SelectListItem> {
                       new SelectListItem { Value = "Amigo" , Text = "Amigo" },
                       new SelectListItem { Value = "Escola" , Text = "Escola" },
                       new SelectListItem { Value = "Facebook" , Text = "Facebook" },
                       new SelectListItem { Value = "Faculdade" , Text = "Faculdade" },
                       new SelectListItem { Value = "Familiar" , Text = "Familiar" },
                       new SelectListItem { Value = "Passando em Frente" , Text = "Passando em Frente" },
                       new SelectListItem { Value = "Jornal" , Text = "Jornal" },
                       new SelectListItem { Value = "Rádio" , Text = "Rádio" },
                       new SelectListItem { Value = "TV" , Text = "TV" },
                       new SelectListItem { Value = "Whatsapp" , Text = "Whatsapp" },
                       new SelectListItem { Value = "Outro" , Text = "Outro" }
                    }, new { @id = "sabendoevento", @class = "form-control" })
                            <div class="help-block with-errors">@Html.ValidationMessageFor(m => m.SabendoEvento)</div>
                            <div id="outro" style="display: none;">
                                <label class="control-label">Como ficou sabendo?: </label>
                                <!-- Textbox criado pelo razor-->
                                @Html.TextBoxFor(m => m.Outro, new { @id = "outropls", @class = "form-control", @type = "text", @placeholder = "Como ficou sabendo?", maxlength = "50", @disabled = "disabled" })
                            </div>
                        </div>
                    
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <hr class="bordapreta"/>
                        <div class="row">

                            <div class="col-xs-offset-2 col-xs-4">
                                <button type="submit" class="btn btn-primary btn-lg center-block">Enviar</button>
                            </div>
                            <div class="col-xs-4">
                                <button type="reset" class="btn btn-default btn-lg center-block">Limpar</button>
                            </div>
                            
                        </div>
                        <br />
                    </div>
                    </div>
        </form>
</section>



